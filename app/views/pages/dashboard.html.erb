<div class="row my-2">
  <div class="col">
    <div class="card">
      <div class="card-header no-border bg-white pb-0">
        <ul class="nav nav-pills lavalamp mb-2" id="tabs-tab" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="tabs-my-profile-tab" data-bs-toggle="pill" href="#tabs-my-profile" role="tab" aria-controls="tabs-my-profile" aria-selected="true" onclick="return false">My profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="tabs-my-bookings-tab" data-bs-toggle="pill" href="#tabs-my-bookings" role="tab" aria-controls="tabs-my-bookings" aria-selected="false" onclick="return false">My Bookings</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="tabs-my-bikes-tab" data-bs-toggle="pill" href="#tabs-my-bikes" role="tab" aria-controls="tabs-my-bikes" aria-selected="false" onclick="return false">My Bikes</a>
          </li>
        </ul>

      </div>
      <div class="card-body">
        <div class="tab-content" id="tabs-tabContent">
          <div class="tab-pane fade show active" id="tabs-my-profile" role="tabpanel" aria-labelledby="tabs-my-profile-tab">
            <ul>
                <li>
                  <%= current_user.username%>
                </li>
            </ul>
          </div>
          <div class="tab-pane fade" id="tabs-my-bookings" role="tabpanel" aria-labelledby="tabs-my-bookings-tab">
            <ul>
              <% Booking.where(user_id: current_user).each do |booking|%>
                <li>
                  <%= booking.bike.model%>
                  <%= booking.start_date%>
                  <%= booking.end_date%>
                </li>
              <%end%>
            </ul>
          </div>
          <div class="tab-pane fade" id="tabs-my-bikes" role="tabpanel" aria-labelledby="tabs-my-bikes-tab">
          <ul>
            <% Bike.where(user_id: current_user).each do |bike|%>
              <li>
                <%= bike.name%>
              </li>
            <%end%>
          </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
