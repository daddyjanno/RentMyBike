<div class="container">
  <%= simple_form_for @bike do |f| %>
    <%= f.input :name %>
    <%= f.input :category, collection: [ "Mountain", "City", "Road", "Gravel", "Touring"] %>
    <%= f.input :model %>
    <%= f.input :location, input_html: {data: {address_autocomplete_target: "location"}, class: "d-none"} , wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
    <%= f.input :description %>
    <%= f.input :price_per_day %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, "Add your bike!", class: "pink-btn" %>
  <% end %>
</div>
