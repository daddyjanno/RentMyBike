<%= simple_form_for @bike do |f| %>
  <%= f.input :name %>
  <%= f.input :category, default: "Mountain", collection: [ "Mountain", "City", "Road", "Gravel", "Touring"] %>
  <%= f.input :model %>
  <%= f.input :location %>
  <%= f.input :description %>
  <%= f.input :price_per_day %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
